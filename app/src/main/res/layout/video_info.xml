<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_vod_info"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="13"
    android:padding="10dp"
    android:background="@drawable/vod_paly_bkg"
    android:layout_height="match_parent">

    <!--标题部分布局 占总比2/13-->
    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_weight="2">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/vod_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/vod_introduce"/>
            <TextView
                android:id="@+id/vod_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="25dp"
                android:text="类型"
                android:textColor="#ffffff"
                android:textSize="28dp" />
        </LinearLayout>
    </RelativeLayout><!--标题部分布局-->

    <!--主题部分布局 占10/13-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_margin="5dp"
        android:padding="30dp"
        android:orientation="horizontal"
        android:weightSum="3">
        <!--视频图片 2/3-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/vod_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:scaleType="fitXY"
                android:background="@drawable/vod_bkg"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/vod_play"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/play_icon"
                android:visibility="visible"/>
        </RelativeLayout>
        <!--视频介绍1/3-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="40dp"
            android:layout_weight="1"
            android:weightSum="9"
            android:background="@drawable/vod_intro_bkg">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:weightSum="2">
                <!--年份-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/nf"/>
                    <TextView
                        android:id ="@+id/vod_data"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="25dp"/>
                </LinearLayout>
                <!--导演-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/dy_word"/>
                    <TextView
                        android:id ="@+id/vod_director"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="25dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="2">
                <!--演员-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/yy_word"/>
                    <TextView
                        android:id ="@+id/vod_actor"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="25dp"
                        android:ellipsize="marquee"/>
                </LinearLayout>
                <!--类型-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/lx"/>
                    <TextView
                        android:id ="@+id/vod_type2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="25dp"/>
                </LinearLayout>
            </LinearLayout>
            <!--简述-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/js"/>
                <TextView
                    android:id="@+id/vod_infos"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:textSize="25dp"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"/>
            </LinearLayout>
        </LinearLayout><!--简介部分布局-->

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="5dp">
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="100dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/back_button"
            android:id="@+id/vod_return"
            android:layout_height="50dp" />
    </RelativeLayout>

</LinearLayout>
